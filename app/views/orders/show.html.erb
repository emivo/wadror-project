<% if admin %>
<p>
  <strong>User:</strong>
  <%= @order.user_id %>
</p>
    <%end%>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Products</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |p| %>
      <tr>
        <td><%= link_to p.product.name, p.product %></td>
        <% unless @order.paid %>
            <td><%= link_to 'Remove', remove_product_path(p.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<% if @products.empty? %>
    <p> cart is empty </p>
<% else %>
<%= link_to 'Pay and place an order', pay_path(@order.id) %>
<% end %>

