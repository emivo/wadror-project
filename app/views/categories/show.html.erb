<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>


<table class="table table-hover">
  <thead>
  <tr>
    <th>Products</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @products %><br>

<% if admin %>
    <%= link_to 'Edit', edit_category_path(@category), class: 'btn bnt-sm btn-primary' %>
    <%= link_to 'Delete category', @category, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %>
<% end %>
