<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>


<table class="table table-hover">
  <thead>
  <tr>
    <th>Products</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @category.products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
      </tr>
  <% end %>
  </tbody>
</table>