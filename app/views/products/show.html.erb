<div class="im-centered">
  <div class="row">
    <div class="col-md-4">
      <h2>
        <%= @product.name %>
      </h2>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <% if admin %>
          <p>
            <strong>Stock:</strong>
            <%= @product.stock %>
          </p>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= image_tag @product.photo.url(:thumb) %>
    </div>
  </div>
  <% if @product.stock > 0 %>

      <%= form_tag add_product_path(@product.id) do %>
          <div class="row">
            <div class="col-md-4">
              <div class="input-group input-group-sm">
                <%= number_field_tag :quantity, '1', class: 'form-control' %>
                <div class="input-group-btn">
                  <%= submit_tag 'Add to cart', class: 'btn btn-success' %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
  <% else %>
      <p>
        <strong>Out of stock</strong>
      </p>
  <% end %>
  <% if admin %>
      <br>
      <%= link_to 'Destroy', @product, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
  <% end %>
</div>