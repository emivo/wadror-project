<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<%= image_tag @product.photo.url(:thumb) %>

<% if current_user && current_user.admin %>
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Buy', :back, class: 'btn btn-success' %>
